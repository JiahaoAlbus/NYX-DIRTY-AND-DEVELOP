[Unit]
Description=NYX Metrics Exporter
After=network.target

[Service]
Type=simple
WorkingDirectory=/opt/nyx
Environment=NYX_METRICS_LISTEN=127.0.0.1
Environment=NYX_METRICS_PORT=9099
Environment=NYX_METRICS_BASE_URL=http://127.0.0.1:8091
Environment=NYX_GATEWAY_DB_PATH=/opt/nyx/apps/nyx-backend-gateway/data/nyx_gateway.db
ExecStart=/usr/bin/python3 /opt/nyx/scripts/nyx_metrics_exporter.py
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
