# Environment mode: dev | staging | prod
NYX_ENV=dev

# Portal session secret (required and long in staging/prod)
NYX_PORTAL_SESSION_SECRET=change-me-dev
# Challenge TTL (seconds)
NYX_PORTAL_CHALLENGE_TTL=300

# Q9/Q10 Testnet treasury routing (do not commit real values)
NYX_TESTNET_TREASURY_ADDRESS=NYX_TESTNET_TREASURY_PLACEHOLDER
# Legacy compatibility (optional)
NYX_TESTNET_FEE_ADDRESS=NYX_TESTNET_TREASURY_PLACEHOLDER
# Platform fee policy (basis points). 0 disables platform fee.
NYX_PLATFORM_FEE_BPS=10
# Protocol fee minimum (advisory; do not set below 1 for value moves).
NYX_PROTOCOL_FEE_MIN=1

# Faucet policy
NYX_FAUCET_COOLDOWN_SECONDS=86400
NYX_FAUCET_MAX_AMOUNT_PER_24H=1000
NYX_FAUCET_MAX_CLAIMS_PER_24H=1
NYX_FAUCET_IP_MAX_CLAIMS_PER_24H=5

# Compliance hooks (optional; required in prod when enabled)
NYX_COMPLIANCE_ENABLED=false
NYX_COMPLIANCE_URL=
NYX_COMPLIANCE_TIMEOUT_SECONDS=3
NYX_COMPLIANCE_FAIL_CLOSED=true

# Mainnet risk controls / circuit breakers
# Mode: off | monitor | enforce (defaults: dev=off, staging=monitor, prod=enforce)
NYX_RISK_MODE=monitor
# Emergency kill switch for shared-state mutations
NYX_RISK_GLOBAL_MUTATIONS_PAUSED=false
# Global limits (all shared-state mutations)
NYX_RISK_GLOBAL_MAX_PER_MIN=600
NYX_RISK_GLOBAL_MAX_AMOUNT_PER_MIN=10000000
# Per-account limits
NYX_RISK_ACCOUNT_MAX_PER_MIN=120
NYX_RISK_ACCOUNT_MAX_AMOUNT_PER_MIN=2000000
# Per-IP limits
NYX_RISK_IP_MAX_PER_MIN=240
NYX_RISK_IP_MAX_AMOUNT_PER_MIN=3000000
# Per-action limits
NYX_RISK_TRANSFER_MAX_PER_MIN=30
NYX_RISK_FAUCET_MAX_PER_MIN=30
NYX_RISK_AIRDROP_MAX_PER_MIN=30
NYX_RISK_EXCHANGE_ORDERS_PER_MIN=60
NYX_RISK_EXCHANGE_CANCELS_PER_MIN=120
NYX_RISK_MARKETPLACE_ORDERS_PER_MIN=60
NYX_RISK_CHAT_MESSAGES_PER_MIN=120
# Notional guards
NYX_RISK_MAX_TRANSFER_AMOUNT=250000
NYX_RISK_MAX_FAUCET_AMOUNT=10000
NYX_RISK_MAX_AIRDROP_AMOUNT=50000
NYX_RISK_MAX_ORDER_NOTIONAL=500000
NYX_RISK_MAX_STORE_NOTIONAL=250000
# Auto circuit breaker on errors
NYX_RISK_BREAKER_ERRORS_PER_MIN=40
NYX_RISK_BREAKER_WINDOW_SECONDS=60

# Tracing (OpenTelemetry)
NYX_OTEL_ENABLED=false

# -------------------------------------------------------------------
# External integrations (set real values via deployment secrets).
# Do NOT commit production keys into git.
# -------------------------------------------------------------------
NYX_0X_API_KEY=
NYX_JUPITER_API_KEY=
NYX_MAGIC_EDEN_API_KEY=
NYX_PAYEVM_API_KEY=
